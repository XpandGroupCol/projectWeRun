---
import "../styles.css";
import Carousel from "../components-react/carousel";
import Form from "../components-react/form";
import { IMAGESCAROUSEL, ICONS, LINKSTORE } from "../config/list";
import Button from "../components-astro/button.astro";
import Spotify from "../components-astro/spotify.astro";
import IconLink from "../components-astro/iconLink.astro";
import StoreLink from "../components-astro/storeLink.astro";
import Modal from "../components-astro/modal.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
    <!-- Google Tag Manager -->
    <script data-astro="raw">
      (function (w, d, s, l, i) {
        w[l] = w[l] || [];
        w[l].push({ "gtm.start": new Date().getTime(), event: "gtm.js" });
        var f = d.getElementsByTagName(s)[0],
          j = d.createElement(s),
          dl = l != "dataLayer" ? "&l=" + l : "";
        j.async = true;
        j.src = "https://www.googletagmanager.com/gtm.js?id=" + i + dl;
        f.parentNode.insertBefore(j, f);
      })(window, document, "script", "dataLayer", "GTM-WBTC8C43");
    </script><!-- Google Tag Manager -->
  </head>
  <body>
    <!-- Google Tag Manager (noscript) -->
    <noscript
      ><iframe
        src="https://www.googletagmanager.com/ns.html?id=GTM-WBTC8C43"
        height="0"
        width="0"
        style="display:none;visibility:hidden"></iframe></noscript
    >
    <!-- End Google Tag Manager (noscript) -->
    <!-- ... Otros componentes y contenido ... -->

    <header>
      <section
        class="flex-col bg-header bg-cover bg-no-repeat bg-top h-[60vh] md:h-[85vh] min-h-[450px]
        relative items-center justify-center"
      >
        <div class="flex-col justify-center items-center">
          <Carousel client:only="react" images={IMAGESCAROUSEL} />
        </div>
        <div class="absolute bottom-[-18px] left-[50%] translate-x-[-50%]">
          <!-- <Button text="¡Inscríbete al siguiente evento!" /> -->
          <Modal>
            <!-- <button slot="close">Close modal</button> -->
          </Modal>
        </div>
      </section>
    </header>
    <main class="">
      <section class="bg-third px-[30px] py-[50px]">
        <div class="w-[100%] max-w-[450px] m-auto">
          <div
            class="flex max-w-[80%] m-auto justify-between items-center mb-[20px]"
          >
            {ICONS.map((icon) => <IconLink src={icon.src} link={icon.link} />)}
          </div>

          <Spotify />
          <h2
            class="text-[18px] font-abc text-secondary text-center text-[2.5rem] leading-[2.5rem] md:hidden"
          >
            Juntos, creamos historias de éxito en cada carrera
          </h2>
          <h2
            class="text-[18px] font-abc text-secondary text-center text-[2.5rem] leading-[2.5rem] hidden md:block"
          >
            Conoce la ubicación<br />de nuestras tiendas
          </h2>
        </div>
      </section>
    </main>
    <section class="bg-gradient-radial px-[30px] py-[30px] flex-col">
      <div
        class="flex flex-col py-[32px] w-[100%] xss:w-[80%] max-w-[450px] m-auto items-center"
      >
        <h2
          class="text-[18px] font-abc text-secondary text-center text-[2.5rem] leading-[2.5rem]"
        >
          Nuestras líneas<br />de contacto
        </h2>
        <div
          id="tiendas"
          class="store-container flex relative hover:bg-transparent flex-col gap-[18px] pt-[28px]
           text-center w-[80%] lg:h-auto lg:w-full text-primary justify-center items-center lg:px-[8px]"
        >
          {
            LINKSTORE.map((store) => (
              <StoreLink
                id={store.id}
                src={store.src}
                src2={store.src2}
                name={store.name}
                link={store.link}
              />
            ))
          }
        </div>
      </div>
    </section>
    <footer
      class="flex flex-col bg-footer bg-cover bg-no-repeat bg-top h-[60vh] min-h-[350px] lg:h-[80vh]"
    >
      <div class="flex">
        <Carousel client:only="react" images={IMAGESCAROUSEL} />
      </div>
      <div
        class="flex flex-1 justify-center items-end w-[100%] max-w-[600px] px-[30px] m-auto"
      >
        <div class="md:hidden">
          <Button text="¡Únete a nuestra comunidad!" />
        </div>
      </div>
      <div class="flex">
        <Carousel client:only="react" images={IMAGESCAROUSEL} />
      </div>
    </footer>
    <section>
      <div></div>
    </section>
  </body>
</html>
